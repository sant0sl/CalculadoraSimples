<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.calculadora.sant0sl.slcalculadora.MainActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daniel K. Fosquerau e Leonardo S. dos Santos"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp" />

    <EditText
        android:id="@+id/txtProcesso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btndiv"
        android:layout_below="@+id/txtTitulo"
        android:cursorVisible="true"
        android:editable="false"
        android:ellipsize="end"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="#ce2727"
        android:textSize="28dp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="7"
        android:textSize="28dp"
        android:layout_below="@+id/txtProcesso"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:backgroundTint="#FFFAFA"/>

    <Button
        android:id="@+id/btn8"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="8"
        android:textSize="28dp"
        android:layout_below="@+id/txtProcesso"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:backgroundTint="#FFFAFA"/>

    <Button
        android:id="@+id/btn9"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="9"
        android:textSize="28dp"
        android:layout_below="@+id/txtProcesso"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:backgroundTint="#FFFAFA"/>

    <Button
        android:id="@+id/btndiv"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="/"
        android:textSize="28dp"
        android:layout_below="@+id/txtProcesso"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="4"
        android:textSize="28dp"
        android:layout_below="@+id/btn7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:backgroundTint="#FFFAFA"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="5"
        android:textSize="28dp"
        android:layout_below="@+id/btn8"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:backgroundTint="#FFFAFA"/>

    <Button
        android:id="@+id/btn6"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="6"
        android:textSize="28dp"
        android:layout_below="@+id/btn9"
        android:layout_toRightOf="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:backgroundTint="#FFFAFA"/>

    <Button
        android:id="@+id/btnmulti"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="*"
        android:textSize="28dp"
        android:layout_below="@+id/btndiv"
        android:layout_toRightOf="@+id/btn6"
        android:layout_toEndOf="@+id/btn6"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="1"
        android:textSize="28dp"
        android:layout_below="@+id/btn4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:backgroundTint="#FFFAFA"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="2"
        android:textSize="28dp"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:backgroundTint="#FFFAFA"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="3"
        android:textSize="28dp"
        android:layout_below="@+id/btn6"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:backgroundTint="#FFFAFA"/>

    <Button
        android:id="@+id/btnsubtrai"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="-"
        android:textSize="28dp"
        android:layout_below="@+id/btnmulti"
        android:layout_toRightOf="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"/>

    <Button
        android:id="@+id/btnponto"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="."
        android:textSize="28dp"
        android:layout_below="@+id/btn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:backgroundTint="#FFFAFA"/>

    <Button
        android:id="@+id/btn0"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="0"
        android:textSize="28dp"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btnponto"
        android:layout_toEndOf="@+id/btnponto"
        android:backgroundTint="#FFFAFA"/>

    <Button
        android:id="@+id/btnigual"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="="
        android:textSize="28dp"
        android:backgroundTint="#ce2727"
        android:layout_below="@+id/btn3"
        android:layout_toRightOf="@+id/btn0"
        android:layout_toEndOf="@+id/btn0"/>

    <Button
        android:id="@+id/btnsoma"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:text="+"
        android:textSize="28dp"
        android:layout_below="@+id/btnsubtrai"
        android:layout_toRightOf="@+id/btnigual"
        android:layout_toEndOf="@+id/btnigual"/>

    <Button
        android:id="@+id/btnlimpar"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:text="Limpar"
        android:textSize="28dp"
        android:layout_below="@+id/btnponto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"/>

</RelativeLayout>
